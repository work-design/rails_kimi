<%= form_with theme: nil, url: { controller: 'messages', action: 'create', chat_id: @chat.id }, data: { controller: 'sse-form' }, id: 'chat_form', class: 'box' do |f| %>
  <div class="field">
    <%= f.text_area :content, autofocus: true, class: 'textarea is-borderless' %>
  </div>
  <div class="has-block-right">
    <%= button_tag data: { action: 'sse-form#commit' }, class: 'button' do %>
      <span class="icon">
        <i class="fa-solid fa-xl fa-paper-plane"></i>
      </span>
    <% end %>
  </div>
<% end %>